{% extends 'base.html.twig' %}

{% block body %}
    <h1 class="contact text-center">Utilisateurs list</h1>

    <table class="table table-striped table-dark">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Nom</th>
                <th scope="col">Prenom</th>
                <th scope="col">Email</th>
                <th scope="col">Datenaissance</th>
                <th scope="col">Telephone</th>
                <th scope="col" class="text-danger">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for utilisateur in utilisateurs %}
            <tr>
                <td scope="row"><a href="{{ path('utilisateurs_show', { 'id': utilisateur.id }) }}">{{ utilisateur.id }}</a></td>
                <td>{{ utilisateur.nom }}</td>
                <td>{{ utilisateur.prenom }}</td>
                <td>{{ utilisateur.email }}</td>
                <td>{% if utilisateur.dateNaissance %}{{ utilisateur.dateNaissance|date('Y-m-d') }}{% endif %}</td>
                <td>{{ utilisateur.telephone }}</td>
                <td>
                    <ul class="list-unstyled">
                       
                            <button class="btn btn-success"><a href="{{ path('utilisateurs_show', { 'id': utilisateur.id }) }}">show</a></button>
                        
                            <button class="btn btn-warning"><a href="{{ path('utilisateurs_edit', { 'id': utilisateur.id }) }}">edit</a></button>
                        
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul class="list-unstyled">
        
            <button class="btn btn-danger text-center"><a href="{{ path('utilisateurs_new') }}">Create a new utilisateur</a></button>
        
    </ul>
{% endblock %}
