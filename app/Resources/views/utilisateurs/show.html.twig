{% extends 'base.html.twig' %}

{% block body %}
    <h1 class="text-center">Utilisateur N{{ utilisateur.id }}</h1>

    <table class="table table-striped table-dark">
        <tbody>
            <tr>
                <th scope="col">Id</th>
                <td>{{ utilisateur.id }}</td>
            </tr>
            <tr>
                <th scope="col">Nom</th>
                <td>{{ utilisateur.nom }}</td>
            </tr>
            <tr>
                <th scope="col">Prenom</th>
                <td>{{ utilisateur.prenom }}</td>
            </tr>
            <tr>
                <th scope="col">Email</th>
                <td>{{ utilisateur.email }}</td>
            </tr>
            <tr>
                <th scope="col">Datenaissance</th>
                <td>{% if utilisateur.dateNaissance %}{{ utilisateur.dateNaissance|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th scope="col">Telephone</th>
                <td>{{ utilisateur.telephone }}</td>
            </tr>
        </tbody>
    </table>



        
            <button class="btn btn-success"><a href="{{ path('utilisateurs_index') }}">Back to the list</a></button>
        
            <button class="btn btn-warning"><a href="{{ path('utilisateurs_edit', { 'id': utilisateur.id }) }}">Edit</a></button>

<br><br>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete" class="btn btn-danger">
            {{ form_end(delete_form) }}
       
    
{% endblock %}
